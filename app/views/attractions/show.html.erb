<%= @attraction.name %>
<%= @attraction.min_height %>
<%= @attraction.nausea_rating %>
<%= @attraction.happiness_rating %>
<%= @attraction.tickets %>

<%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :attraction_id %>
    <%= f.submit "Go on this ride" %>
<% end %>

<%= link_to "Edit Attraction", edit_attraction_path(@attraction) if current_user.admin %>